# .coveragerc to control coverage.py
[run]
branch = True

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError
	assert

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:

omit =
    # omit everything in gui and example packages
    pycity_calc/toolbox/others/*
	pycity_calc/cities/scripts/city_generator_based_on_osm_files.py
	pycity_calc/simulation/energy_balance_ref_state/*
	pycity_calc/test/checks/*
	pycity_calc/toolbox/shp_geo_processing/*
	pycity_calc/toolbox/mc_helpers/Morris_analysis/*
	pycity_calc/test/xtest_simulation_energy_balances.py
	pycity_calc/toolbox/clustering/experiments/*

ignore_errors = True

[html]
directory = coverage_html_report